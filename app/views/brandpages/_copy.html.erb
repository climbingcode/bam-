<section id="copy" class="row">
<h2>Copy</h2>

<% if @copies.present? %>

  <% @copies.each do | copy | %>
  	<div class="brand-copy-text col-sm-10 col-sm-offset-1">
	    <div id="copie<%= copy.id %>" class="copy_wrapper">
	       <div >
	        <h3 id="copy-desc-<%= copy.id%>"><strong><%= copy.description.titleize %></strong></h3>
	        <hr>
	     		<h4 id="copy-text-<%= copy.id%>"><%= copy.text.capitalize %></h4>
	      </div>
	    </div>
	  </div>
  <% end %>
<% else %>
  <h3 id="copy-add-message"> Whats your brand's story, mission, vision?</h3><br><br>
<% end %>

</section>