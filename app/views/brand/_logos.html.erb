<section id="logos" class="row">

  <h2>Logos</h2>
  <% if @logos.size != 0 %>
    <% @logos.each do | logo | %>
      <div id="logo<%= logo.id %>" data-logoid="<%= logo.id %>" data-file-location="<%= logo.path %>" class="col-sm-4">
        <div class="img-background" style="height: 339px;">
          <img src="<%= logo.path %>" class="img-responsive logo">
        </div>
        <div class="logo-meta">
          <label class="img-label"><%= logo.name %></label>
          <div class="logo-options">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Options
              <span class="caret"></span>
            </a>
        
              <ul role="menu" class="dropdown-menu">
                <li class="dropdown-header">Download</li>
                <li><a href="#"><%= logo.name %>.ai</a></li>
                <li><a href="#"><%= logo.name %>.png</a></li>
                <li><a href="#"><%= logo.name %>.jpg</a></li>
                <li><a class="list-delete" href="#">Delete</a></li>
              </ul>
    
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <%= "Add some logos to you brand" %>
  <% end %>

    <div class="col-sm-4 image-column">
      <div class="img-background"/>
        <img src="/assets/nav-logo.png" class="img-responsive logo">
      </div>
      <div class="logo-meta">
        <label class="img-label"> Logo Name </label>
        <div class="logo-options">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Options<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li class="dropdown-header">Download</li>
            <li class="divider"></li>
            <li><a href="#">logo.ai<span class="download-icon">&#10003</span></li>
            <li><a href="#">logo.png</a></li>
            <li><a href="#">logo.jpg</a></li>
            <li><a class="list-delete" href="#">Delete</a></li>
          </ul>
        </div>
      </div>
    </div>




</section>