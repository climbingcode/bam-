    <%= form_for Logo.new, url: user_brand_logos_path(params[:user_id], params[:id], format: :json) , remote: true, authenticity_token: true, method: 'get', html: {id: 'load_logo' } do |f|%>
      <%= f.hidden_field(:brand_id, :value => params[:id]) %>
    <% end %> 
  </div> --> 

  <% if @logos.size != 0 %>
    <% @logos.each do | logo | %>
      <div id="logo<%= logo.id %>" data-file-location="<%= logo.path %>" class="col-sm-3">
        <div class="img-background" style="height: 339px;">
          <div class="img-background-inner">
          <img src="<%= logo.path %>" class="img-responsive logo">
          </div>
        </div>
        <div class="logo-meta">
          <label class="img-label"><%= logo.name %></label>
          <a href="#" class="delete-asset" data-logoid="<%= logo.id %>"></a>
          <div class="logo-options">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Options
              <span class="caret"></span>
            </a>

            <ul role="menu" class="dropdown-menu">
              <li class="dropdown-header">Download</li>
              <li><a href="#"><%= logo.name %>.ai</a></li>
              <li><%= link_to "#{logo.name}.png", download_logos_path(logo) %></li>
              <li><%= link_to "#{logo.name}.jpg", download_logos_path(logo) %></li>
            </ul>

          </div>
        </div>
      </div>
    <% end %>
  <% else %>
  <div class="empty-section-notification">
    <%= "Looks Like You Need to Add Some Logos" %>
    </div>
  <% end %>




</section>