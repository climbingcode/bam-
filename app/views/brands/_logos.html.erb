    <%= form_for Logo.new, url: user_brand_logos_path(params[:user_id], params[:id], format: :json) , remote: true, authenticity_token: true, method: 'get', html: {id: 'load_logo' } do |f|%>
      <%= f.hidden_field(:brand_id, :value => params[:id]) %>
