<div class="modal fade" id="businessCardModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="businessCardModal">Business Card Builder</h4>
      </div>
      <div class="modal-body">
        <div id ="business_card_background">
          <%= render :partial => 'pdfs/business_card.pdf.erb' %>
        </div>
        <div class="business_card_form">
          <%= render 'business_card_form.html.erb' %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn bam_btn" data-dismiss="modal">Close</button>
        <%= link_to "Download to pdf", business_card_path(@user, :format => "pdf"), :id => "businessCardGenerator", :class => "btn bam_btn"%>
      

      </div>    
    </div>
  </div>
</div>