<div class="col-xs-12 col-sm-4">
<%= bootstrap_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="users_signup">
<!--     brand information -->
    <div class="form-group">
    <%= label_tag :name, "Brand name"%>
    <%= text_field_tag :name, nil, class: 'form-control'%>
    <%= label_tag :website, "Brand Website"%>
    <%= url_field_tag :website, nil, class: 'form-control' %>
    </div>
<!-- user information -->
    <%= f.text_field :firstname %>
    <%= f.text_field :surname %>
    <%= f.text_field :username %>
    <%= f.email_field :email %>
    <%= f.text_field :position %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation%>
    <%= f.submit %>
  </div>
<% end %>
</div>
