<%= render 'layouts/header' unless @disable_nav %>

<section id="home_landing" class="row">
  <div id="parallax-bg">
    <div class="container">
      <div class="col-sm-6 " id="left-landing-box">
      
          <h3>All Your Brand Assets</h3>
          <h3>In One Place</h3>

