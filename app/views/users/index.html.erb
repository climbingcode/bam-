            <% end %>
          </div>
        
        <button class="btn bam_btn bam_btn_alt" id="sign_up_btn" data-toggle="modal" data-target="#signUpModal">Sign Up
        </button>
      </div>
      <div class="col-sm-6" id="right-landing-box">
        <img src="/assets/cloud.png" class="img-responsive">
      </div>
    </div>
  </div>
